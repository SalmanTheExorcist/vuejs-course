@section scripts {
  <script src="/lib/vue/dist/vue.min.js"></script>
  <script src="~/js/filters.js"></script>
  <script src="~/js/indexPage.js"></script>
}
<div id="index-page">
  <h2>{{ appName }}</h2>
  <div>Today: {{ today | date }}</div>

  <div v-if="error" class="alert alert-danger">{{ error }}</div>

  <div class="row">
    <div v-for="p in products" class="col-md-4">
      <div class="card" v-bind:class="{ 'bg-secondary': p.onSale }">
        <img v-if="p.imageUrl.indexOf('noimage') === -1" :src="p.imageUrl" />
        <div class="card-body">
          <h3 class="card-title">{{ p.brand }}</h3>
          <p class="text-muted">{{ p.category }}</p>
          <p>{{ p.name }}</p>
          <p :class="{ 'text-success': p.onSale }">Price: {{ p.price | money(2, "£") }}</p>
        </div>
        <div class="card-footer">
          <button class="btn btn-success" v-on:click="onBuy(p)">Buy</button>
          <button class="btn btn-info">About</button>
        </div>
      </div>
    </div>
  </div>
</div>